{
    "name": "nwt/coding-standards",
    "type": "library",
    "description": "Coding standards definition compatible with PSR-2",
    "keywords": ["code style", "coding standards", "PSR-2", "code quality"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nwt",
            "homepage": "https://www.nwt.cz/"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-tokenizer": "*",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "slevomat/coding-standard": "^6.4",
        "squizlabs/php_codesniffer": "^3.5.0",
        "symplify/phpstan-rules": "^9.2",
        "symplify/package-builder": "^9.2",
        "symplify/easy-coding-standard": "^9.4.70",
        "friendsofphp/php-cs-fixer": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-symfony": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "Nwt\\CodingStandards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\CodingStandards\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "10.0.3-dev"
        }
    }
}
